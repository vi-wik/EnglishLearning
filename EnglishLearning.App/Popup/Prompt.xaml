<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"               
       x:Class="EnglishLearning.App.Views.Prompt" Opened="Popup_Opened">
    
    <VerticalStackLayout HeightRequest="180" BackgroundColor="White">
        <Grid Margin="2,2" HeightRequest="30" WidthRequest="300" BackgroundColor="SkyBlue">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="100" />               
            </Grid.ColumnDefinitions>

            <Label x:Name="lblTitle" FontSize="16" Grid.Column="0" HorizontalTextAlignment="Start" VerticalOptions="Center" ></Label>

            <ImageButton  Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" HeightRequest="20" WidthRequest="20" Clicked="OnCloseImageClicked"   Margin="2,0" >
                <ImageButton.Source>
                    <FontImageSource   FontFamily="FASolid" Glyph="{StaticResource close}"  Color="DodgerBlue" Size="10"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>

        <HorizontalStackLayout WidthRequest="300" Margin="2,10">
            <Label x:Name="lblName" VerticalOptions="Center"></Label>
            <Label Text="：" VerticalOptions="Center"></Label>
            <Entry x:Name="txtContent" Text=""  HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Keyboard="Default"  WidthRequest="250" HeightRequest="40" ClearButtonVisibility="WhileEditing"></Entry>
        </HorizontalStackLayout>        

        <Grid Margin="0,2" HeightRequest="50">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnOK" Text="确定" Grid.Column="0" BorderWidth="1" BorderColor="DodgerBlue" TextColor="DodgerBlue" WidthRequest="100" BackgroundColor="Transparent" Clicked="btnOK_Clicked"></Button>
            <Button x:Name="btnCancel" Text="取消" Grid.Column="1" BorderWidth="1" BorderColor="LightGray" TextColor="Gray" WidthRequest="100" BackgroundColor="Transparent" Clicked="btnCancel_Clicked"></Button>
        </Grid>
    </VerticalStackLayout>
</toolkit:Popup>