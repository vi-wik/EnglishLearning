<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"            
             x:Class="EnglishLearning.App.Views.MediaPlayer"     
             Title=""> 
   

    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill"  >
            <Label x:Name="lblTitle" Text="" TextColor="White"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   VerticalOptions="Center"
                   HeightRequest="30"
                   FontSize="14" />
        </HorizontalStackLayout>
    </Shell.TitleView>   

    <VerticalStackLayout>
      
        <toolkit:MediaElement x:Name="player" 
           ShouldAutoPlay="False"
           ShouldShowPlaybackControls="True"     
           WidthRequest="360" HeightRequest="400"         
           PositionChanged="player_PositionChanged" 
         />

        <Label x:Name="lblDescription"></Label>

        <ImageButton x:Name="btnFavorite" Margin="10,5" WidthRequest="25" HeightRequest="25" HorizontalOptions="Center"               
              Clicked="btnFavorite_Clicked"  VerticalOptions="End">
            <ImageButton.Source>
                <FontImageSource  FontFamily="FARegular" Glyph="{StaticResource star}"  Color="Gray"  Size="10"/>
            </ImageButton.Source>
        </ImageButton>

        <Button x:Name="btnOpenInOtherApp" Text="在其他应用中打开" Clicked="btnOpenInOtherApp_Clicked" Margin="0,10"></Button>

    </VerticalStackLayout>
   
</ContentPage>