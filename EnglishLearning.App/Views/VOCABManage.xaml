<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnglishLearning.App.Views.VOCABManage"
             Title="管理生词本">
    <VerticalStackLayout>
        <Border Padding="2" Margin="5,5" BackgroundColor="AliceBlue">

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_ExportTapped" NumberOfTapsRequired="1" />
            </Border.GestureRecognizers>

            <Label Text="导出生词本"  HorizontalTextAlignment="Start" FontSize="18" Padding="10,5" />

        </Border>

        <Border Padding="2" Margin="5,5" BackgroundColor="AliceBlue">

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_ImportTapped" NumberOfTapsRequired="1" />
            </Border.GestureRecognizers>

            <Label Text="导入生词本"  HorizontalTextAlignment="Start" FontSize="18" Padding="10,5" />

        </Border>

        <Border Padding="2" Margin="5,5" BackgroundColor="AliceBlue">

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_ClearTapped" NumberOfTapsRequired="1" />
            </Border.GestureRecognizers>

            <Label Text="清空生词本"  HorizontalTextAlignment="Start" FontSize="18" Padding="10,5" />

        </Border>
    </VerticalStackLayout>
</ContentPage>